<div data-hook="admin_district_form_fields" class="row">
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :name, class: ['form-group'] do %>
      <%= f.label :name, Spree.t(:name) %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.error_message_on :name %>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :code, class: ['form-group'] do %>
      <%= f.label :code, Spree.t(:code) %>
      <%= f.text_field :code, class: 'form-control' %>
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :postcode, class: ['form-group'] do %>
      <%= f.label :postcode, Spree.t(:postcode) %>
      <%= f.text_field :postcode, class: 'form-control' %>
    <% end %>
  </div>
</div>
